<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin" >

    <ImageView
        android:id="@+id/close_button"
        android:layout_width="@dimen/actionbar_icon"
        android:layout_height="@dimen/actionbar_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:padding="@dimen/image_padding"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/profile_header_image_height"
        android:layout_height="@dimen/profile_header_image_height"
        android:layout_below="@+id/close_button"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/activity_horizontal_margin_half"
        android:textAllCaps="true"
        android:textColor="@color/app_default"
        android:textSize="@dimen/text_size_18"
        />

    <TextView
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_name"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/text_size_16"
        />



</RelativeLayout>